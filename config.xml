<?xml version="1.0" encoding="UTF-8"?>
    <widget xmlns = "http://www.w3.org/ns/widgets"
        xmlns:gap = "http://phonegap.com/ns/1.0"
        id        = "com.voteidi.app"
        versionCode="1"
        version   = "1.1">
        <name>VOTEIDI</name>
        <description>
